<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.hp.widget.TopBar
        android:id="@+id/topbar_setpsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftBackground="@drawable/icon_back"
        app:titleColor="@color/black"
        app:topbarBackground="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividercolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin44"
            android:layout_marginLeft="@dimen/margin36"
            android:layout_marginRight="@dimen/margin36"
            android:layout_marginTop="@dimen/margin44"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/edt_set_newpsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="@dimen/margin10"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin36"
            android:layout_marginRight="@dimen/margin36"
            android:background="@color/dividercolor" />

        <LinearLayout
            android:id="@+id/ll_identifyCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin44"
            android:layout_marginRight="@dimen/margin36"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="center_vertical"
            android:paddingLeft="60dp" >

            <EditText
                android:id="@+id/edt_set_confirpsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请再次输入密码"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin36"
            android:layout_marginRight="@dimen/margin36"
            android:background="@color/dividercolor" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin44"
            android:layout_marginLeft="@dimen/margin36"
            android:layout_marginRight="@dimen/margin36"
            android:layout_marginTop="@dimen/margin36"
            android:background="@drawable/bg_btn_register"
            android:text="确认"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>