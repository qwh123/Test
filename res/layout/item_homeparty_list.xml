<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="1.0" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_house_icon"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.25"
        android:src="@drawable/icon_addpic" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.50" >

        <TextView
            android:id="@+id/tv_house_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="鼓楼别墅派对"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_housep_newprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_house_title"
            android:layout_marginTop="2dp"
            android:text="￥1190"
            android:textColor="@color/SysColor"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_house_title"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_housep_newprise"
            android:background="@drawable/icon_hengxian" >

            <TextView
                android:id="@+id/tv_housep_oldprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="￥1290"
                android:textColor="#4D4D4D"
                android:textSize="14sp" />
        </RelativeLayout>

        <RatingBar
            android:id="@+id/rb_starlevel"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_housep_newprise"
            android:layout_marginTop="2dp"
            android:numStars="5"
            android:rating="3.5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/tv_house_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="鼓楼区"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.25" >

        <TextView
            android:id="@+id/tv_house_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:text="100km"
            android:textColor="#bbbbbb"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_house_lable"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/bg_label_hd" />
    </RelativeLayout>

</LinearLayout>