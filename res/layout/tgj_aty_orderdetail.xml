<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <com.hp.widget.TopBar
        android:id="@+id/topbar_tgj_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginTop="8dp"
        android:text="订单信息"
        android:textSize="@dimen/textsize18" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin16" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_tgj_ordertail_orderid"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin44"
                android:layout_marginLeft="@dimen/margin10"
                android:gravity="center_vertical"
                android:text="爱乐兔"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize14" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividercolor" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场所"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_tgj_ordertail_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin44"
                android:layout_marginLeft="@dimen/margin10"
                android:gravity="center_vertical"
                android:text="鼓楼轰趴管"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize14" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividercolor" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场次信息"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_tgj_ordertail_date"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin44"
                android:layout_marginLeft="@dimen/margin10"
                android:gravity="center_vertical"
                android:text="套餐一："
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize14" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividercolor" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_tgj_ordertail_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin44"
                android:layout_marginLeft="@dimen/margin10"
                android:gravity="center_vertical"
                android:text="1999"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize14" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginTop="@dimen/margin10"
        android:text="用户信息"
        android:textSize="@dimen/textsize18" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin16" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_tgj_ordertail_nickname"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin44"
                android:layout_marginLeft="@dimen/margin10"
                android:gravity="center_vertical"
                android:text="那一阵风"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize14" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividercolor" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计到达时间"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_tgj_ordertail_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin44"
                android:layout_marginLeft="@dimen/margin10"
                android:gravity="center_vertical"
                android:text="2015-11-15"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize14" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/rl_tgj_ordetail_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin44"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin16"
        android:paddingRight="@dimen/margin16" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:id="@+id/tv_tgj_ordertail_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin3"
            android:layout_weight="1"
            android:text="18850105250"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/textsize14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/icon_tel" />
    </LinearLayout>

</LinearLayout>