<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:descendantFocusability="blocksDescendants" >

    <!-- 主题图片 -->

    <ImageView
        android:id="@+id/iv_home_category_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="210dp"
        android:minHeight="180dp"
        android:scaleType="fitXY" />
    <!-- 活动标签 -->

    <ImageView
        android:id="@+id/iv_home_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16"
        android:background="@drawable/bg_label_cd" />
    <!-- 信息标签 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#AA797769"
        android:paddingLeft="@dimen/margin16"
        android:paddingRight="@dimen/margin16" >

        <TextView
            android:id="@+id/tv_home_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="轰趴管"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/tv_home_category_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_category_title"
            android:layout_marginTop="@dimen/margin3"
            android:text="鼓楼区1.20km"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/tv_home_category_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="￥1100.0"
            android:textColor="@color/SysColor"
            android:textSize="@dimen/textsize24" >
        </TextView>

        <TextView
            android:id="@+id/tv_home_category_acount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="@dimen/margin3"
            android:text="数量"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="@style/RatingBar_small_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_category_acount"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="@dimen/margin10"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_home_category_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginLeft="175dp"
            android:text="2015-10-10"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>