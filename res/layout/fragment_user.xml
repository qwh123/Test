<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hp"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background" >

        <RelativeLayout
            android:id="@+id/rl_userUpdate"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/bg_user" >

            <LinearLayout
                android:id="@+id/rl_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin16"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible" >

                <com.hp.widget.CircleImageView
                    android:id="@+id/iv_userIcon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/user_null"
                    app:border_width="2dp" />

                <TextView
                    android:id="@+id/tv_userNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10"
                    android:drawableLeft="@drawable/icon_boy"
                    android:drawablePadding="@dimen/margin3"
                    android:text="轰趴兔哥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize16" />
                <!--
                <TextView
                    android:id="@+id/tv_userLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等级 "
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize12" />
                -->

                <TextView
                    android:id="@+id/tv_userPerSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试 "
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_no_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/user_null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin3"
                    android:text="未登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize18" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin16"
                android:background="@null"
                android:src="@drawable/icon_setting" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_userUpdate"
            android:layout_marginTop="5dp"
            android:background="@color/dividercolor" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_userOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin44"
                android:background="@drawable/bt_nobgd"
                android:paddingLeft="@dimen/margin16"
                android:paddingRight="@dimen/margin16" >

                <ImageView
                    android:id="@+id/iv_userOrderIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_order" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_next_huise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_toRightOf="@+id/iv_userOrderIcon"
                    android:text="@string/myOrder"
                    android:textColor="@color/textcolor1"
                    android:textSize="@dimen/textsize16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividercolor" />

            <RelativeLayout
                android:id="@+id/id_rl_collect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin44"
                android:background="@drawable/bt_nobgd"
                android:paddingLeft="@dimen/margin16"
                android:paddingRight="@dimen/margin16" >

                <ImageView
                    android:id="@+id/iv_userCollectIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_sc" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_next_huise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_toRightOf="@+id/iv_userCollectIcon"
                    android:text="@string/myCollect"
                    android:textColor="@color/textcolor1"
                    android:textSize="@dimen/textsize16" />
            </RelativeLayout>
            <!--
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividercolor" />

            <RelativeLayout
                android:id="@+id/id_rl_active"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin44"
                android:background="@drawable/bt_nobgd" >

                <ImageView
                    android:id="@+id/iv_userActiveIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_hd" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_next_huise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_toRightOf="@+id/iv_userActiveIcon"
                    android:text="@string/my_active"
                    android:textColor="@color/textcolor1"
                    android:textSize="@dimen/textsize16" />
            </RelativeLayout>            -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividercolor" />

            <RelativeLayout
                android:id="@+id/id_rl_publish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin44"
                android:background="@drawable/bt_nobgd"
                android:paddingLeft="@dimen/margin16"
                android:paddingRight="@dimen/margin16" >

                <ImageView
                    android:id="@+id/iv_userDynamicIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_dt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_next_huise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_toRightOf="@+id/iv_userDynamicIcon"
                    android:text="@string/myDynamic"
                    android:textColor="@color/textcolor1"
                    android:textSize="@dimen/textsize16" />
            </RelativeLayout>
            <!--
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividercolor" />

            <RelativeLayout
                android:id="@+id/id_rl_qiandao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin44"
                android:background="@drawable/bt_nobgd" >

                <ImageView
                    android:id="@+id/iv_userQDIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_qiaodao" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_next_huise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_toRightOf="@+id/iv_userQDIcon"
                    android:text="@string/qiandao"
                    android:textColor="@color/textcolor1"
                    android:textSize="@dimen/textsize16" />
            </RelativeLayout>
            -->
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linearLayout1"
            android:background="@color/dividercolor" />

        <RelativeLayout
            android:id="@+id/SwitchToTheMerchant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin44"
            android:layout_below="@id/view2"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_switch"
                android:drawablePadding="@dimen/margin10"
                android:text="@string/SwitchToTheMerchant"
                android:textColor="@color/SysColor"
                android:textSize="@dimen/textsize16" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>